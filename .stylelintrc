{
    "plugins": [
		"stylelint-order"
	],
    "extends": ["stylelint-config-standard", "stylelint-config-hudochenkov/order"],
    "rules": {
        "indentation": 4,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["mixin", "include"]
            }
        ]
    }
}
